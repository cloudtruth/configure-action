    "version": "0.2.0",
    "configurations": [
        {
            "name": "Record Tests",
            "request": "launch",
            "runtimeArgs": [
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "env": {
                "POLLY_MODE": "record"
                // "SETUP": "setup"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Replay Tests",
            "request": "launch",
            "runtimeArgs": [
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "env": {
                "POLLY_MODE": "replay"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}