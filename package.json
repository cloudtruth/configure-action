{
  "name": "configure-action",
  "version": "2.0.0",
  "description": "Securely deliver CloudTruth configuration and secrets into your GitHub Actions workflows.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "generate-client": "npx swagger-typescript-api -p openapi.json -o ./src/gen --modular --responses --route-types --extract-request-params --extract-request-body",
    "lint": "eslint",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest -i --coverage --runInBand --detectOpenHandles",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "engines": {
    "node": ">=12.0.0 <13.0.0",
    "npm": ">=7.19.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudtruth/configure-action.git"
  },
  "keywords": [
    "configuration",
    "secrets",
    "configuration management",
    "environment variables"
  ],
  "author": "CloudTruth, Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "isomorphic-fetch": "^3.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@scaleleap/jest-polly": "^1.5.40",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/jest": "^26.0.24",
    "@types/node": "^12",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/parser": "^4.28.5",
    "@vercel/ncc": "^0.29.0",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.1.5",
    "eslint-plugin-jest": "^24.4.0",
    "jest": "^26.6.3",
    "js-yaml": "^4.1.0",
    "prettier": "^2.3.2",
    "swagger-typescript-api": "^9.2.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5"
  }
}
